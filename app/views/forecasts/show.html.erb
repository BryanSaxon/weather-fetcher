<div class="px-4 py-12 sm:px-6 lg:py-16 lg:px-16">
  <div class="bg-white shadow sm:rounded-lg rounded-lg9o">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg font-medium leading-6 text-gray-900">
        Weather Information for <%= @forecast.id %>
      </h3>

      <p class="mt-1 max-w-2xl text-sm text-gray-500">Current Forecast</p>
    </div>

    <div class="border-t border-gray-200 px-4 py-5 sm:p-0">
      <dl class="sm:divide-y sm:divide-gray-200">
        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6 items-center justify-items-start">
          <dt class="text-sm font-medium text-gray-500">Conditions</dt>
          <dd class="grid grid-cols-2 items-center text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <span class="flex-auto"><%= @forecast.text%></span>
            <span class="flex-auto"><%= weather_icon(@forecast.icon) %></span>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Temperature</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= "#{@forecast.temperature} #{@forecast.temperature_unit}" %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Relative Humidity</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= @forecast.relative_humidity %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Daytime?</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= boolean_display(@forecast.daytime) %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Precipitation?</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= boolean_display(@forecast.precipitation) %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Wind Speed</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= "#{@forecast.wind_speed} #{@forecast.wind_speed_unit} #{@forecast.wind_direction}" %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Dewpoint</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= "#{@forecast.dewpoint} #{@forecast.dewpoint_unit}" %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Visability</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= "#{@forecast.visability} #{@forecast.visability_unit}" %>
          </dd>
        </div>

        <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">UV Index</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
            <%= "#{@forecast.uv_index} (#{@forecast.uv_index_text})" %>
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>